<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:id="@+id/invoices_layout"
    tools:context=".OutfitView">

    <TextView
        android:id="@+id/itemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tie Dye Party Dress Outfit"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/clothingImage"
        android:layout_width="wrap_content"
        android:layout_height="497dp"
        android:rotation="270"
        android:rotationX="0"
        android:rotationY="0"
        tools:srcCompat="@mipmap/tiedye" />

    <TextView
        android:id="@+id/clothingType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rotation="0"
        android:text="Clothing Item: Tie Dye Dress" />

    <TextView
        android:id="@+id/clothingColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shoes: Butterfly Shoes" />

    <TextView
        android:id="@+id/clothingWeather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jewelry: White Swavorski Crystal Necklace" />

</LinearLayout>
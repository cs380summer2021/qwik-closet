<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:id="@+id/add_clothing_item_layout"
    tools:context=".ClothingItemView">

    <TextView
        android:id="@+id/clothingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tie Dye Dress"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/clothing_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:layout_weight="60"
        android:scaleType="fitCenter"
       tools:srcCompat="@mipmap/tiedye" />

    <TextView
        android:id="@+id/clothing_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rotation="0"
        android:text="Clothing Type: Dress" />

    <TextView
        android:id="@+id/clothing_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clothing Color: Blue and Pink" />

    <TextView
        android:id="@+id/clothing_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Appropriate Weather: Hot" />

    <TextView
        android:id="@+id/clothing_precipitation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Appropriate Weather: Clear" />



    <TextView
        android:id="@+id/clothing_mood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mood: Confident" />

    <TextView
        android:id="@+id/clothing_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="For What Task(s):  Party" />
</LinearLayout>